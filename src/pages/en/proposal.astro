---
import Button from "../../components/Button.astro";
import Layout from "../../layouts/Layout.astro";
---

<style>
  /* Styles are the same as the Japanese version */
  .description {
    margin-top: 24px;
  }

  .info-box {
    margin-top: 24px;
  }

  .period-container {
    display: flex;
    align-items: center;
    font-weight: 700;
    padding: 32px 0;

    @media screen and (max-width: 860px) {
      padding: 24px 0;
      flex-direction: column;
      align-items: flex-start;
    }
  }

  .period-badge {
    width: 160px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--surface-secondary-dark);
    color: var(--text-on-fill);
    border-radius: 16px;
    font-size: 24px;

    @media screen and (max-width: 860px) {
      width: 120px;
      height: 40px;
      font-size: 16px;
      border-radius: 12px;
    }
  }

  .period-date {
    margin-left: 40px;
    font-size: 16px;

    @media screen and (max-width: 860px) {
      margin-left: 0;
      margin-top: 16px;
      font-size: 14px;
    }
  }

  .button-wrapper {
    margin-top: 64px;
  }
</style>

<Layout title="プロポーザル" titleEn="Proposal">
  <main>
    <h2 class="section-title">Call for Proposals</h2>

    <p class="description">Go Conference is calling for proposals.</p>

    <div class="info-box">
      <div class="period-container">
        <div class="period-badge">Submission Period</div>
        <div class="period-date">2025/05/13 12:00:00 ~ 2025/06/18 23:59:59</div>
      </div>
      <div class="button-wrapper">
        <Button
          href="https://sessionize.com/go-conference-2025/"
          size="large"
          target="_blank">Apply Here</Button
        >
      </div>
    </div>
  </main>
</Layout>
