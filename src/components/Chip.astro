---
interface Props {
  variant?: "primary" | "secondary" | "surface-secondary";
  class?: string;
  fontSize?: string;
  borderRadius?: string;
}

const { variant = "primary", class: className } = Astro.props;
---

<style>
  .chip {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 8px 24px;
    background-color: var(--surface-primary-dark);
    color: var(--text-on-fill);
    border-radius: 16px;
    font-size: 20px;
    font-weight: 700;
    text-align: center;
    box-sizing: border-box;

    @media screen and (max-width: 860px) {
      & {
        border-radius: 10px;
        padding: 4px 16px;
        font-size: 18px;
      }
    }
  }

  .chip--primary {
    background-color: var(--surface-primary-dark);
    border: 2px solid var(--surface-primary-dark);
    color: var(--text-on-fill);
  }

  .chip--secondary {
    background-color: var(--surface-secondary-dark);
    border: 2px solid var(--surface-secondary-dark);
    color: var(--text-on-fill);
  }

  .chip--surface-secondary {
    background-color: var(--surface-secondary);
    border: 2px solid var(--surface-secondary);
    /* setup font color */
    color: var(--text-accent);
  }
</style>

<span class={`chip chip--${variant}${className ? ` ${className}` : ""}`}>
  <slot />
</span>
