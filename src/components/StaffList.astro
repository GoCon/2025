---
import { getCollection } from "astro:content";
import { concatWithBase } from "../utils/concatWithBase";
import XLogo from "../assets/x-logo.svg";
import GitHubLogo from "../assets/github-mark.svg";
import MastodonLogo from "../assets/mastodon-logo.svg";
import LinkIcon from "../assets/icon/link.svg";
import CompanyIcon from "../assets/icon/company.svg";

const staffs = await getCollection("staffs");
---

<section class="staffs-section">
  <div class="staffs-grid">
    {
      staffs.map((staff) => (
        <div class="staff-card">
          <div class="staff-header">
            <div
              class={`staff-avatar ${staff.data.avatar ? "staff-avatar--with-image" : "staff-avatar--placeholder"}`}
            >
              {staff.data.avatar && (
                <img
                  src={
                    new URL(
                      concatWithBase(`staffs/${staff.data.avatar}`),
                      Astro.url,
                    ).href
                  }
                  alt={staff.data.name}
                />
              )}
            </div>

            {staff.data.sns && (
              <div class="social-links">
                <a
                  href={staff.data.sns.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                  aria-label={`${staff.data.sns.type} Link`}
                >
                  {staff.data.sns.type === "x" && <XLogo />}
                  {staff.data.sns.type === "github" && <GitHubLogo />}
                  {staff.data.sns.type === "mastodon" && <MastodonLogo />}
                </a>
              </div>
            )}
          </div>

          <div class="staff-content">
            <h3 class="staff-name">{staff.data.name}</h3>

            {staff.data.company && (
              <p class="staff-company">
                <CompanyIcon />
                {staff.data.company}
              </p>
            )}

            {staff.data.communities && staff.data.communities.length > 0 && (
              <div class="communities">
                {staff.data.communities.map((community, index) => (
                  <>
                    {community.link ? (
                      <a
                        href={community.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="community-link"
                      >
                        {community.name}
                        {index < staff.data.communities.length - 1 && ", "}
                      </a>
                    ) : (
                      <span class="community-name">
                        {community.name}
                        {index < staff.data.communities.length - 1 && ", "}
                      </span>
                    )}
                  </>
                ))}
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .staffs-section {
    padding: 0;
  }

  .staffs-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 16px;
    text-align: center;

    &::first-letter {
      color: var(--text-accent);
    }
  }

  .staffs-subtitle {
    font-family: "Barlow", sans-serif;
    font-size: 68px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 40px;
    text-align: center;
    line-height: 1.2;

    @media screen and (max-width: 860px) {
      font-size: 40px;
      margin: 0 0 32px;
    }
  }

  .staffs-grid {
    display: grid;
    gap: 24px;
    margin-top: 32px;
    justify-content: center;
    grid-template-columns: repeat(3, 360px);

    @media screen and (max-width: 1200px) {
      grid-template-columns: repeat(2, 360px);
    }

    @media screen and (max-width: 800px) {
      grid-template-columns: 360px;
    }
  }

  .staff-card {
    background: var(--primitive-light-blue);
    border-radius: 16px;
    padding: 24px;
    width: 360px;
    min-height: 200px;
    box-sizing: border-box;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .staff-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .staff-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    color: #666;
    flex-shrink: 0;
  }

  .staff-content {
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  .staff-avatar--with-image {
    background: #fff;
  }

  .staff-avatar--placeholder {
    background: #c4c4c4;
  }

  .staff-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }

  .staff-name {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.2;
  }

  .staff-company {
    font-size: 14px;
    font-weight: 700;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.4;
    display: flex;
    align-items: flex-end;
    gap: 4px;
  }

  .staff-company svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .social-links {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    text-decoration: none;
    border-radius: 4px;
    transition: opacity 0.2s ease;

    &:hover {
      opacity: 0.7;
    }
  }

  .social-link svg {
    width: 30px;
    height: 30px;
    fill: var(--text-primary);
  }

  .communities {
    margin: 0;
    line-height: 1.4;
  }

  .community-link {
    font-size: 12px;
    font-weight: 700;
    color: var(--text-accent);
    text-decoration: underline;

    &:hover {
      opacity: 0.8;
    }
  }

  .community-name {
    font-size: 12px;
    font-weight: 700;
    color: var(--text-accent);
  }

  .community-separator {
    color: var(--text-secondary);
  }
</style>
