---
import Image from "astro/components/Image.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import CloseIcon from "../assets/icon/close.svg";
import MenuIcon from "../assets/icon/menu.svg";
import OpenInNewIcon from "../assets/icon/open-in-new.svg";
import Logo from "../assets/logo.svg";
import { constants } from "../constants";
import Button from "./Button.astro";

const currentLocale = Astro.currentLocale || "ja";
---

<style>
  .header {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 40px;
    background: var(--surface-primary);
    z-index: 1000;

    @media screen and (max-width: 992px) {
      & {
        padding: 8px 24px;
      }
    }
  }

  .header-logo {
    margin: 0;

    & img {
      vertical-align: middle;

      @media screen and (max-width: 860px) {
        & {
          height: 50px;
          width: auto;
        }
      }
    }
  }

  .navigation {
    display: flex;
    align-items: center;
    gap: 26px;

    & .navigation-menu {
      display: flex;
      gap: 26px;
      list-style: none;
      margin: 0;
      padding: 0;
      & a {
        text-decoration: none;
        color: var(--text-primary);
        font-size: 16px;
        font-weight: 700;
        transition: opacity 0.3s ease;

        &:hover {
          opacity: 0.7;
        }
      }
    }

    @media screen and (max-width: 860px) {
      & {
        position: fixed;
        top: 66px;
        left: 0;
        right: 0;
        bottom: 0;
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 32px 73px;
        gap: 40px;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(32px);
        z-index: 1000;

        & .navigation-menu {
          flex-direction: column;
          padding: 0 16px;
          gap: 32px;

          & a {
            font-size: 24px;
          }
        }
      }
    }
  }

  .navigation-toggle {
    display: none;
  }

  .navigation-icon {
    display: none;
    justify-content: center;
    align-items: center;
    width: 48px;
    height: 48px;
    background: var(--surface-secondary-dark);
    border-radius: 100%;
    cursor: pointer;

    @media screen and (max-width: 860px) {
      & {
        display: inline-flex;
      }
    }

    & .menu-icon {
      fill: var(--text-on-fill);
    }

    & .close-icon {
      display: none;
      fill: var(--text-on-fill);
    }
  }

  .navigation-toggle:checked {
    & ~ * .menu-icon {
      display: none;
    }
    & ~ * .close-icon {
      display: inline;
    }
    & ~ .navigation {
      display: flex;
    }
  }

  .language-switcher {
    display: flex;
    gap: 0;
    margin: 0;
    padding: 0;
    list-style: none;

    @media screen and (max-width: 860px) {
      & {
        padding: 0 8px;
      }
    }

    & .language-link {
      display: inline-block;

      & + &::before {
        content: "/";
        color: var(--text-primary);
      }

      & a {
        padding: 8px;
        text-decoration: none;
        color: var(--text-secondary);
        font-size: 16px;
        font-weight: 700;
        transition: opacity 0.3s ease;

        &[href] {
          color: var(--text-primary);
        }

        &:hover {
          opacity: 0.7;
        }
      }
    }
  }

  .external-link {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: var(--text-primary);
    font-size: 16px;
    font-weight: 700;
    transition: opacity 0.3s ease;

    &:hover {
      opacity: 0.7;
    }

    @media screen and (max-width: 860px) {
      & {
        padding-left: 16px;
        font-size: 24px;
      }
    }
  }

  .external-icon {
    width: 20px;
    height: 20px;
    fill: currentColor;

    @media screen and (max-width: 860px) {
      & {
        width: 24px;
        height: 24px;
      }
    }
  }
</style>

<nav class="header">
  <h1 class="header-logo">
    <a href={getRelativeLocaleUrl(currentLocale)}>
      <Image src={Logo} alt={constants.pageTitle} width={122} priority />
    </a>
  </h1>
  <input type="checkbox" id="navigation-toggle" class="navigation-toggle" />
  <label for="navigation-toggle" class="navigation-icon">
    <MenuIcon class="menu-icon" />
    <CloseIcon class="close-icon" />
  </label>
  <div class="navigation">
    <ul class="navigation-menu">
      <li><a href={getRelativeLocaleUrl(currentLocale)}>Home</a></li>
      <li>
        <a href={getRelativeLocaleUrl(currentLocale, "timetable")}>
          Timetable
        </a>
      </li>
      <li>
        <a href={getRelativeLocaleUrl(currentLocale, "jobboard")}>
          Job Board
        </a>
      </li>
      <li>
        <a href={getRelativeLocaleUrl(currentLocale, "staffs")}> Staff </a>
      </li>
    </ul>
    <a
      href="https://docs.google.com/document/d/1LxjzxHK23aTAFvGZeR-BpHf8sC6RKAqbImtnUtxQ3Yo/edit?tab=t.0#heading=h.n5j5dks9hlev"
      class="external-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      <span>Sponsor FAQ</span>
      <OpenInNewIcon class="external-icon" />
    </a>
    <Button
      href="https://ti.to/gophers-japan/go-conference-2025"
      target="_blank"
    >
      {currentLocale === "ja" ? "イベントに申し込む" : "Apply for the event"}
    </Button>
    <ul class="language-switcher">
      <li class="language-link">
        <a
          href={currentLocale !== "ja" ? getRelativeLocaleUrl("ja") : undefined}
          >JP
        </a>
      </li>
      <li class="language-link">
        <a
          href={currentLocale !== "en" ? getRelativeLocaleUrl("en") : undefined}
          >EN
        </a>
      </li>
    </ul>
  </div>
</nav>
