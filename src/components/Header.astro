---
import Image from "astro/components/Image.astro";
import Logo from "../assets/logo.svg";
import { constants } from "../constants";
import Button from "./Button.astro";
---

<style>
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 40px;
    background: var(--surface-primary);
  }

  .header-logo {
    margin: 0;
  }

  .navigation {
    display: flex;
    align-items: center;
    gap: 26px;
  }

  .navigation ul {
    display: flex;
    gap: 26px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .navigation ul a {
    text-decoration: none;
    color: var(--text-primary);
    font-size: 16px;
    font-weight: 700;
    transition: opacity 0.3s ease;
  }

  .navigation ul a:hover {
    opacity: 0.7;
  }
</style>

<nav class="header">
  <h1 class="header-logo">
    <Image src={Logo} alt={constants.pageTitle} width={122} height={58} />
  </h1>
  <div class="navigation">
    <ul>
      <li><a href="">Home</a></li>
      <li><a href="">FAQ</a></li>
      <li><a href="">Timetable</a></li>
      <li><a href="">Floor Guide</a></li>
      <li><a href="">Staffs</a></li>
    </ul>
    <Button href="/" target="_blank">イベントに申し込む</Button>
  </div>
</nav>
