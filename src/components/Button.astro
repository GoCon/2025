---
interface Props {
  variant?: "primary" | "secondary";
  size?: "small" | "large";
  disabled?: boolean;
  href?: string;
  target?: string;
}

const {
  variant = "primary",
  size = "small",
  disabled = false,
  href,
  target,
} = Astro.props;
---

<style>
  .button {
    display: inline-block;
    padding: 8px 24px;
    background-color: var(--surface-primary-dark);
    color: var(--text-on-fill);
    text-decoration: none;
    border-radius: 999px;
    font-size: 16px;
    font-weight: 700;
    box-sizing: border-box;
    transition: background-color 0.3s ease;
  }

  .button--primary {
    background-color: var(--surface-primary-dark);
    border: 2px solid var(--surface-primary-dark);
    color: var(--text-on-fill);
  }

  .button--primary:hover {
    background-color: var(--surface-primary);
    border: 2px solid var(--surface-primary-dark);
    color: var(--surface-primary-dark);
  }

  .button--primary .arrow path {
    fill: var(--surface-primary-dark);
  }

  .button--secondary {
    background-color: var(--surface-secondary-dark);
    border: 2px solid var(--surface-secondary-dark);
    color: var(--text-on-fill);
  }

  .button--secondary:hover {
    background-color: var(--surface-primary);
    border: 2px solid var(--surface-secondary-dark);
    color: var(--surface-secondary-dark);
  }

  .button--secondary .arrow path {
    fill: var(--surface-secondary-dark);
  }

  .button--small {
    font-size: 14px;
  }

  .button--small .arrow {
    display: none;
  }

  .button--large {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    padding: 16px 120px;
  }

  .button--large .arrow {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 24px;
    margin: auto 0;
    padding: 6px;
    background-color: var(--surface-primary);
    border-radius: 99px;
  }

  .button--disabled {
    background-color: var(--surface-tertiary);
    border: 2px solid var(--surface-tertiary);
    color: var(--text-on-fill);
    cursor: not-allowed;
  }

  .button--disabled:hover {
    background-color: var(--surface-tertiary);
    border: 2px solid var(--surface-tertiary);
    color: var(--text-on-fill);
  }

  .button--disabled .arrow path {
    fill: var(--surface-tertiary);
  }
</style>

<a
  class={`button button--${variant} button--${size} ${disabled ? "button--disabled" : ""}`}
  href={disabled ? undefined : href}
  aria-disabled={disabled}
  role="button"
  target={target}
  rel={target === "_blank" ? "noopener noreferrer" : undefined}
>
  <slot />
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="arrow"
  >
    <path
      d="M11.0501 12L7.1751 6.575C6.94176 6.24167 6.9126 5.89583 7.0876 5.5375C7.2626 5.17917 7.55843 5 7.9751 5C8.14176 5 8.3001 5.0375 8.4501 5.1125C8.6001 5.1875 8.71676 5.29167 8.8001 5.425L13.5001 12L8.8001 18.575C8.71676 18.7083 8.6001 18.8125 8.4501 18.8875C8.3001 18.9625 8.14176 19 7.9751 19C7.5751 19 7.28343 18.8208 7.1001 18.4625C6.91676 18.1042 6.94176 17.7583 7.1751 17.425L11.0501 12ZM17.0001 12L13.1251 6.575C12.8918 6.24167 12.8626 5.89583 13.0376 5.5375C13.2126 5.17917 13.5084 5 13.9251 5C14.0918 5 14.2501 5.0375 14.4001 5.1125C14.5501 5.1875 14.6668 5.29167 14.7501 5.425L19.4501 12L14.7501 18.575C14.6668 18.7083 14.5501 18.8125 14.4001 18.8875C14.2501 18.9625 14.0918 19 13.9251 19C13.5251 19 13.2334 18.8208 13.0501 18.4625C12.8668 18.1042 12.8918 17.7583 13.1251 17.425L17.0001 12Z"
      fill="var(--text-on-fill)"></path>
  </svg>
</a>
