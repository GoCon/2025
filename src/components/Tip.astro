---
import DoubleArrow from "../assets/icon/double-arrow.svg";

interface Props {
  variant?: "primary" | "secondary";
  size?: "small" | "large";
  disabled?: boolean;
  href?: string;
  target?: string;
}

const {
  variant = "primary",
  size = "small",
  disabled = false,
  href,
  target,
} = Astro.props;
---

<style>
  .tip {
    display: inline-block;
    padding: 8px 24px;
    background-color: var(--surface-primary-dark);
    color: var(--text-on-fill);
    text-decoration: none;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 700;
    box-sizing: border-box;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .tip--primary {
    background-color: var(--surface-primary-dark);
    border: 2px solid var(--surface-primary-dark);
    color: var(--text-on-fill);
  }

  .tip--secondary {
    background-color: var(--surface-secondary-dark);
    border: 2px solid var(--surface-secondary-dark);
    color: var(--text-on-fill);
  }

  .tip--disabled {
    background-color: var(--surface-tertiary);
    border: 2px solid var(--surface-tertiary);
    color: var(--text-on-fill);
    cursor: not-allowed;
  }

  .tip--small {
    font-size: 20px;

    & .arrow {
      display: none;
    }
  }

  .tip--large {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    padding: 16px 120px;
  }
</style>

<span
  class={`tip tip--${variant} tip--${size} ${disabled ? "tip--disabled" : ""}`}
  aria-disabled={disabled}
>
  <slot />
  <DoubleArrow class="arrow" />
</span>
