---
import { Image } from "astro:assets";
import { constants } from "../constants";
import Chip from "./Chip.astro";

const currentLocale = Astro.currentLocale || "ja";
interface Props {
  openId: string;
  sponsorSectionTitle: string;
  sponsor: {
    name: string;
    imageSrc: any;
    dialog: {
      imageSrc: any;
      link: string;
      description: string;
      height: number;
      width: number;
    };
  };
}
---

<style>
  .sponsor-dialog {
    padding-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 40px;

    border-radius: 32px;
    border: none;
  }

  .sponsor-dialog-close {
    padding: 8px 16px;
    background-color: var(--surface-secondary-dark);
    color: var(--text-on-fill);
    border-radius: 50%;
    font-weight: 700;
    position: absolute;
    right: 40px;
    top: 40px;
    cursor: pointer;
  }

  .sponsor-dialog-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 600px;
    height: 100%;
  }

  .sponsor-dialog-content a {
    color: var(--text-accent);
    text-decoration: none;
    font-weight: 700;
    font-size: 16px;
  }

  .sponsor-dialog-content h4 {
    margin: 0;
  }

  .sponsor-dialog-header {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    width: 100%;
    gap: 8px;
  }

  .sponsor-dialog-body {
    margin-top: 16px;
    text-align: center;
    font-size: 16px;
    padding: 40px;
    background-color: var(--surface-secondary);
  }

  .sponsor-chip {
    background-color: var(--surface-secondary);
  }

  @media (max-width: 768px) {
    .sponsor-dialog {
      width: 100%;
    }

    .sponsor-dialog-content {
      width: 100%;
    }

    .sponsor-dialog-header {
      width: 100%;
      padding: 0 20px;
    }

    .sponsor-dialog-close {
      right: 24px;
      top: 24px;
    }
  }

  @media (max-width: 480px) {
    .sponsor-dialog {
      width: 100%;
    }

    .sponsor-dialog-content {
      width: 100%;
    }

    .sponsor-dialog-header {
      width: 100%;
      padding: 0 10px;
    }

    .sponsor-dialog-close {
      right: 24px;
      top: 24px;
    }

    .sponsor-dialog-body {
      max-width: 100%;
    }
  }
</style>

<dialog id={`sponsor-dialog-${Astro.props.openId}`} class="sponsor-dialog">
  <div class="sponsor-dialog-content">
    <div class="sponsor-dialog-header">
      <Chip variant="surface-secondary" fontSize="16px"
        >{Astro.props.sponsorSectionTitle}</Chip
      >
      <div
        class="sponsor-dialog-close"
        onclick={`document.getElementById('sponsor-dialog-${Astro.props.openId}').close()`}
      >
        &times;
      </div>
      <Image
        src={Astro.props.sponsor.dialog.imageSrc}
        alt={Astro.props.sponsor.name}
        width={Astro.props.sponsor.dialog.width}
        height={Astro.props.sponsor.dialog.height}
        loading="lazy"
      />
      <h4>{Astro.props.sponsor.name}</h4>
      <a
        href={Astro.props.sponsor.dialog.link}
        target="_blank"
        rel="noopener noreferrer"
      >
        {Astro.props.sponsor.dialog.link}
      </a>
    </div>
    <div class="sponsor-dialog-body">
      <span>{Astro.props.sponsor.dialog.description}</span>
    </div>
  </div>
</dialog>
