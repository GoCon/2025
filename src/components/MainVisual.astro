---
import { Image } from "astro:assets";
import Gopher from "../assets/mv-gophers.png";
import Logo from "../assets/mv-logo.svg";
import Button from "./Button.astro";
---

<style>
  .main-visual {
    padding: 40px 40px 80px;

    & .main-visual-inner {
      position: relative;
      padding: 56px 16px 80px;
      border-radius: 80px;
      background: var(--gradient);
      z-index: 1;

      &::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: inherit;
        background: url("../assets/mv-bg.svg") no-repeat center center;
        background-size: 1355px;
      }
    }
  }

  .logo {
    position: relative;
    margin: 0 0 -105px;
    text-align: center;
    z-index: 2;

    img {
      width: 50%;
    }
  }

  .gopher {
    position: relative;
    margin: 0;
    text-align: center;
    z-index: 3;

    img {
      max-width: 773px;
      width: 100%;
      height: auto;
    }
  }

  .event-info {
    position: relative;
    width: fit-content;
    background: var(--surface-primary);
    border-radius: 24px;
    margin: -105px auto 0;
    padding: 16px 120px;
    z-index: 2;

    p {
      margin: 0;
    }

    & .date {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 24px;
      font-size: 52px;
      font-weight: 700;
      line-height: 1.5;

      & .sat {
        padding-left: 3px;
        font-size: 36px;
        color: var(--text-accent);
      }

      & .san {
        padding-left: 7px;
        font-size: 36px;
        color: var(--text-accent2);
      }
    }

    & .venue {
      font-size: 28px;
      font-weight: 700;
      line-height: 1.5;
    }
  }

  .cta-button {
    position: absolute;
    left: 0;
    right: 0;
    bottom: -33px;
    text-align: center;
    z-index: 2;

    & .cta-button-inner {
      display: inline-block;
      border: 5px solid var(--surface-primary);
      border-radius: 999px;
    }
  }
</style>

<div class="main-visual">
  <div class="main-visual-inner">
    <h1 class="logo">
      <Image src={Logo} alt="Go Conference 2025" />
    </h1>
    <p class="gopher">
      <Image class="gopher" src={Gopher} alt="Go Conference 2025 Main Visual" />
    </p>
    <aside class="event-info">
      <div class="date">
        <p>9.27<span class="sat">SAT</span></p>
        <p>28<span class="san">SUN</span></p>
      </div>
      <p class="venue">Abema Towers 10F / 11F, Tokyo</p>
    </aside>
    <div class="cta-button">
      <div class="cta-button-inner">
        <Button href="/2025/proposal" size="large">プロポーザルに応募</Button>
      </div>
    </div>
  </div>
</div>
